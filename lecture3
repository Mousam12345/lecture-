import java.util.*;

public class lecture {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the String :");
        String str = sc.next() ; 
        String rev  = " ";

        for(int i = str.length() - 1 ; i >= 0 ; i--  ){
            rev += str.charAt(i);

        } 
        System.out.println("reverse String is :" + rev);

        
    }
}
